<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MathRacer</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <script src="/js/bootstrap.min.js"></script>
</head>

<body>
    <h1>Math Racer</h1>
    <div id="lobby">
        <h2>Welcome, <%= username %>
        </h2>
        <div class="center">
            <button id="joinMatchBtn" type="button" class="btn btn-outline-light">Join Public
                Match</button>
        </div>
        <div id="stats" class=" w-25 mx-auto" style="margin-top: 30px;">
            <h3>Your Stats</h3>
            <p>Rating: <%= rating %>
            </p>
            <!-- <p>Win Rate: 0/0 (0%)</p> -->
            <!-- <p>Record: 120</p> -->
        </div>
    </div>

    <div id="waiting" style="display: none;">
        <h2>Waiting for players...</h2>
    </div>

    <div id="match" style="display: none;">
        <div class="center">
            <h2 id="gameTitle"></h2>
            <p id="time"></p>
        </div>
        <div id="gamePanel" class="row border boder-1 border-light">
            <div class="playerPanel col border-end border-1 border-light">
                <p id="user1"></p>
                <p>Points: 0</p>
                <h2 id="question1"></h2>
                <input id="inputText" type="text" disabled>
            </div>

            <div class="playerPanel col border-start border-1 border-light">
                <p id="user2"></p>
                <p>Points: 0</p>
                <h2 id="question2">
                    <h2>
            </div>
        </div>

    </div>

    <div id="opponentDisconnected" style="display: none;">
        <h2>Opponent Disconnected.</h2>
        <div class="center">
            <p>You win automatically!</p>
            <button id="returnBtn">Return</button>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        socket.emit('username', "<%= username %>");

        const joinMatchBtn = document.getElementById('joinMatchBtn');
        joinMatchBtn.addEventListener('click', (event) => {
            socket.emit('joinMatch');
        })

        const waiting = document.getElementById('waiting');
        const lobby = document.getElementById('lobby');
        const match = document.getElementById('match');
        const title = document.getElementById('gameTitle');
        const time = document.getElementById('time');
        const opponentDisconnected = document.getElementById('opponentDisconnected');
        const returnBtn = document.getElementById('returnBtn');

        socket.on('waiting', () => {
            waiting.style.display = 'block';
            lobby.style.display = 'none';
        });

        socket.on('inGame', ({ user1, user2 }) => {
            waiting.style.display = 'none';
            lobby.style.display = 'none';
            title.innerText = `${user1} vs. ${user2}`;
            match.style.display = 'block';
            document.getElementById('user1').innerText = user1;
            document.getElementById('user2').innerText = user2;
        });
        socket.on('countdown', (t) => {
            time.innerText = `Starting Match in: ${t}`;
        });
        socket.on('timeLeft', (t) => {
            document.getElementById('inputText').disabled = false;
            document.getElementById('inputText').focus();
            time.innerText = `${t}`;

        })
        socket.on('opponentDisconnected', () => {
            match.style.display = 'none';
            opponentDisconnected.style.display = 'block';
        })
        returnBtn.addEventListener('click', (event) => {
            opponentDisconnected.style.display = 'none';
            lobby.style.display = 'block';
        })
    </script>
</body>

</html>